@model IEnumerable<pt_2b.Models.User>

@{
    pt_2b.Models.Organisation org = (pt_2b.Models.Organisation)ViewData["org"];

    ViewBag.Title = org.name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>«<a href="/organisation/details/@org.id">@org.name</a>» — пользователи</h2>

<p>
    <a href="/users/Create?orgId=@org.id">Добавить пользователя</a>
</p>
<table class="table">
    <tr>
        <th>
            Фамилия
        </th>
        <th>
            Имя
        </th>
        <th>
            Отчество
        </th>
        <th>
            Почта
        </th>
        <th>
            Пол
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.surname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.patronim)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.sex)
        </td>
        <td>
            <a href="/users/Edit/@item.id?orgId=@org.id">Редактировать</a> |
            <a href="/users/Delete/@item.id?orgId=@org.id">Удалить</a>
        </td>
    </tr>
}

</table>
